{
    /***
     * <h3>Configuration of the restore</h3>
     */

    textdomain "restore";
    import "Restore";

    include "restore/ui.ycp";

    /* The main () */
    y2milestone ("Restore client started");
    y2milestone ("----------------------------------------");


    /* main ui function */
    symbol ret = RestoreSequence();
    y2debug ("ret == %1", ret);

    /* Finish */
    y2milestone ("Restore client finished");

    // unmount any mounted filesystem
    Restore::Umount();

    return ret;
}
